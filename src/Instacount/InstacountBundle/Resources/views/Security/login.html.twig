{% extends 'InstacountInstacountBundle::layout.html.twig' %}
{% block body %}
<div id="login" data-role="page" data-add-back-btn="true">
    <header class="admin" data-position="fixed" data-role="header">
        <a data-ajax="false" data-transition="flip" href="{{ path('InstacountInstacountBundle_homepage')}}" data-role="button" data-icon="" class="ui-btn-left" data-iconpos="">Tillbaka</a>       
    </header>
    <div class="content" data-role="content">            
        <form data-ajax="false" action="{{ path('login_check') }}" method="post">
            <label for="username">Användarnamn</label>
            <input type="text" id="username" name="_username" placeholder="Användarnamn" value="{{ last_username }}" />

            <label for="password">Lösenord:</label>
            <input type="password" id="password" placeholder="Lösenord" name="_password" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit">login</button>
        </form>
{% endblock %}