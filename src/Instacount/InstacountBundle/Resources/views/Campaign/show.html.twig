{% extends 'InstacountInstacountBundle::layout.html.twig' %}

{% block body %}
	<div data-role="page" data-add-back-btn="true">
    	<header class="show" data-position="fixed" data-role="header">
    		<a href=" {{ path('InstacountInstacountBundle_campaign') }}" data-role="button" data-icon="" class="ui-btn-left" data-iconpos="notext"></a>
            <a data-ajax="true" href="{{ path('logout')}}" data-transition="flip" class="ui-btn-right" data-role="button" data-icon="arrow-r" data-iconpos="right">Logga ut</a>
        </header>	
        <div class="content" data-theme="b" data-role="content">		
		<h2>{{ campaign.name }}</h2>
		<div class="admin">Kampanj-id: {{ campaign.id }} </div>
		<div class="admin">Namn: {{ campaign.name }} </div>
		<div class="admin">Tag: #{{ campaign.tag }} </div>
		<div class="admin">Startdatum: {{ campaign.startDate|date('Y-m-d') }}</div>
		<div class="admin">Slutdatum: {{ campaign.endDate|date('Y-m-d') }}</div>
		<a data-ajax="false" href="{{path('InstacountInstacountBundle_campaign_edit', { 'id' : campaign.id }) }}" data-transition="flip" data-role="button" class="ui-btn-right blue" >Redigera</a>
		<a href="{{path('InstacountInstacountBundle_campaign_delete', { 'id' : campaign.id }) }}" data-transition="flip" data-role="button" class="ui-btn-right red" >Radera</a>
	</div>		
	   <footer data-role="footer" data-position="fixed">
     
    </footer>
</div>					
{% endblock %}